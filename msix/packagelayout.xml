<PackagingLayout>
  <PackageFamily Filename="Cargo-msix-{{Version}}.msixbundle" FlatBundle="false" ManifestPath="appxmanifest.xml">
    <Package Filename="Cargo-msix-x64-{{Version}}.appx" ProcessorArchitecture="x64">
      <Files>
        <BuildOutput DestinationPath="cargo-msix.exe" SourceTarget="cargo-msix" SourcePlatform="x86_64-pc-windows-msvc"/>
      </Files>
    </Package>
    <Package Filename="Cargo-msix-x86-{{Version}}.appx" ProcessorArchitecture="x86">
      <Files>
        <BuildOutput DestinationPath="cargo-msix.exe" SourceTarget="cargo-msix" SourcePlatform="i686-pc-windows-msvc"/>
      </Files>
    </Package>
  </PackageFamily>
</PackagingLayout>
